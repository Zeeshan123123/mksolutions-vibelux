# Production Environment Variables Template
# Copy this file to .env.production.local and fill in actual values
# DO NOT commit .env.production.local to version control

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Redis Cache
REDIS_URL=redis://user:password@host:6379

# Clerk Authentication (https://clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_live_YOUR_CLERK_SECRET_KEY
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Stripe Payments (https://stripe.com)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# External APIs
OPENWEATHER_API_KEY=YOUR_OPENWEATHER_API_KEY
NREL_API_KEY=YOUR_NREL_API_KEY
GOOGLE_VISION_API_KEY=YOUR_GOOGLE_VISION_API_KEY
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# AI APIs (Optional)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_ORG_ID=YOUR_OPENAI_ORG_ID
CLAUDE_API_KEY=YOUR_CLAUDE_API_KEY

# InfluxDB Time Series Database
INFLUXDB_URL=https://your-influxdb-instance.com
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=production
INFLUXDB_TOKEN=YOUR_INFLUXDB_TOKEN
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=SECURE_PASSWORD_HERE

# Mobile API
MOBILE_API_KEY=YOUR_SECURE_MOBILE_API_KEY

# Email Service (SendGrid/Postmark/etc)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=YOUR_EMAIL_API_KEY
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=VibeLux

# Error Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX
NEXT_PUBLIC_CLARITY_ID=XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_USE_OPENAI=true
NEXT_PUBLIC_USE_CLAUDE=true

# Security
SESSION_SECRET=GENERATE_A_LONG_RANDOM_STRING_HERE
CORS_ORIGIN=https://your-domain.com

# CDN/Storage (Optional)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET_KEY
AWS_REGION=us-east-1

# Webhook Secrets
GITHUB_WEBHOOK_SECRET=YOUR_GITHUB_WEBHOOK_SECRET
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL