# Security Configuration Template
# Copy this file to .env.local and fill in your values

# Owner emails (comma-separated list of emails with full system access)
# Example: OWNER_EMAILS=owner1@example.com,owner2@example.com
OWNER_EMAILS=

# Admin emails (comma-separated list of emails with admin panel access)
# Example: ADMIN_EMAILS=admin1@example.com,admin2@example.com
ADMIN_EMAILS=

# Security Features
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_CSP_HEADERS=true

# Rate Limiting Configuration
API_RATE_LIMIT_WINDOW=60000  # Window in milliseconds (default: 60 seconds)
API_RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Session Configuration
SESSION_SECRET=  # Generate a strong random string
CSRF_SECRET=     # Generate a strong random string (can be same as SESSION_SECRET)

# Security Monitoring
SECURITY_ALERT_EMAIL=  # Email for security alerts
LOG_SECURITY_EVENTS=true  # Enable security event logging

# Additional Security Headers
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
REFERRER_POLICY=strict-origin-when-cross-origin

# IMPORTANT: Generate secure random strings for secrets
# You can use: openssl rand -base64 32