# ======================
# PRODUCTION ENVIRONMENT VARIABLES
# ======================
# Copy this to .env.production.local and fill in your actual values
# NEVER commit the actual .env.production.local file!

# ======================
# REQUIRED FOR LAUNCH
# ======================

# Database (PostgreSQL - Supabase, Neon, or similar)
DATABASE_URL="postgresql://user:password@host:5432/vibelux?schema=public&pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/vibelux?schema=public"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_live_xxxxx"
CLERK_SECRET_KEY="sk_live_xxxxx"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# Application
NEXT_PUBLIC_APP_NAME="VibeLux"
NEXT_PUBLIC_APP_URL="https://vibelux.com"
NODE_ENV="production"

# ======================
# PAYMENT PROCESSING
# ======================

# Stripe
STRIPE_SECRET_KEY="sk_live_xxxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

# Stripe Product/Price IDs
STRIPE_PRICE_STARTER_MONTHLY="price_xxxxx"
STRIPE_PRICE_STARTER_YEARLY="price_xxxxx"
STRIPE_PRICE_PRO_MONTHLY="price_xxxxx"
STRIPE_PRICE_PRO_YEARLY="price_xxxxx"
STRIPE_PRICE_ENTERPRISE_MONTHLY="price_xxxxx"

# ======================
# AI SERVICES
# ======================

# Claude API (Anthropic)
CLAUDE_API_KEY="sk-ant-api03-xxxxx"
ANTHROPIC_API_KEY="sk-ant-api03-xxxxx"

# Google Vision API
GOOGLE_CLOUD_PROJECT_ID="vibelux-production"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"
NEXT_PUBLIC_GOOGLE_VISION_API_KEY="AIzaxxxxx"

# ======================
# FILE STORAGE & MEDIA
# ======================

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="vibelux"
CLOUDINARY_API_KEY="xxxxx"
CLOUDINARY_API_SECRET="xxxxx"
CLOUDINARY_PRESET_PLANT_HEALTH="vibelux_plant_health"
CLOUDINARY_PRESET_TIMELAPSE="vibelux_timelapse"

# ======================
# EMAIL SERVICE
# ======================

# SendGrid
SENDGRID_API_KEY="SG.xxxxx"
EMAIL_FROM="noreply@vibelux.com"
EMAIL_SUPPORT="support@vibelux.com"

# ======================
# MONITORING & ANALYTICS
# ======================

# Sentry Error Tracking
SENTRY_DSN="https://xxxxx@o4506xxxxx.ingest.sentry.io/xxxxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@o4506xxxxx.ingest.sentry.io/xxxxx"
SENTRY_ORG="vibelux"
SENTRY_PROJECT="vibelux-app"
SENTRY_AUTH_TOKEN="xxxxx"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-xxxxx"

# ======================
# SECURITY
# ======================

# Session & Encryption
NEXTAUTH_SECRET="generate-secure-64-char-random-string"
ENCRYPTION_KEY="generate-secure-32-char-random-string"
JWT_SECRET="generate-secure-64-char-random-string"

# API Rate Limiting (Redis/Upstash)
UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxxxx"

# ======================
# WEATHER & LOCATION
# ======================

# OpenWeatherMap
OPENWEATHER_API_KEY="xxxxx"

# NREL Solar API
NREL_API_KEY="xxxxx"

# ======================
# OPTIONAL SERVICES
# ======================

# Real-time Updates (Pusher)
PUSHER_APP_ID="xxxxx"
NEXT_PUBLIC_PUSHER_KEY="xxxxx"
PUSHER_SECRET="xxxxx"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"

# Time-series Database (InfluxDB)
INFLUXDB_URL="https://us-east-1-1.aws.cloud2.influxdata.com"
INFLUXDB_TOKEN="xxxxx"
INFLUXDB_ORG="vibelux"
INFLUXDB_BUCKET="sensor-data"

# ======================
# CDN & PERFORMANCE
# ======================

# Vercel
VERCEL_URL="https://vibelux.vercel.app"

# Custom CDN
CDN_URL="https://cdn.vibelux.com"

# ======================
# FEATURE FLAGS
# ======================

NEXT_PUBLIC_ENABLE_AI_FEATURES="true"
NEXT_PUBLIC_ENABLE_MARKETPLACE="true"
NEXT_PUBLIC_ENABLE_ENERGY_MONITORING="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Development Features (Must be false in production)
NEXT_PUBLIC_ENABLE_DEV_TOOLS="false"
NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"
NEXT_PUBLIC_ENABLE_TEST_FEATURES="false"