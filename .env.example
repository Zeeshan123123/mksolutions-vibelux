# VibeLux Environment Variables Template
# Copy this file to .env.local for development
# Set these in your production environment (Vercel, AWS, etc.)

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/vibelux"
DIRECT_URL="postgresql://user:password@localhost:5432/vibelux"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_key_here"
CLERK_SECRET_KEY="sk_test_your_secret_here"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# Stripe (Payment Processing)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_public"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# AWS Services (Plant Health Analysis)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"

# Anthropic Claude API (Expert Plant Analysis Enhancement)
ANTHROPIC_API_KEY="your_anthropic_api_key"

# Autodesk Forge API (3D CAD Viewer)
FORGE_CLIENT_ID="your_forge_client_id"
FORGE_CLIENT_SECRET="your_forge_client_secret"

# InfluxDB Cloud - Time Series Database for Sensor Data
INFLUXDB_URL="https://us-east-1-1.aws.cloud2.influxdata.com"
INFLUXDB_TOKEN="your_influxdb_cloud_token"
INFLUXDB_ORG="21b9d85add06d92f"
INFLUXDB_BUCKET="vibelux-sensors"

# OpenAI (for AI features)
OPENAI_API_KEY="sk-your_openai_key"

# Email Service (SendGrid/Resend)
EMAIL_API_KEY="your_email_api_key"
EMAIL_FROM="noreply@vibelux.ai"

# AWS Services (Optional)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="vibelux-assets"

# Monitoring & Analytics
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project"
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Feature Flags
ENABLE_DEMAND_RESPONSE="true"
ENABLE_ENERGY_MONITORING="true"
ENABLE_AI_FEATURES="true"

# API Configuration
API_RATE_LIMIT="100" # requests per minute
API_TIMEOUT="30000" # milliseconds

# External Integrations
ENSAVE_API_KEY="your_ensave_api_key"
ENSAVE_API_URL="https://api.ensave.com/v1"

# VibeLux API
NEXT_PUBLIC_VIBELUX_API_KEY="your_vibelux_api_key"

# Supplier APIs
ATLAS_API_KEY="your_atlas_api_key"
NEXUS_API_KEY="your_nexus_api_key"
PRIVA_API_KEY="your_priva_api_key"
RIMOL_API_KEY="your_rimol_api_key"
ARGUS_API_KEY="your_argus_api_key"

# Push Notifications (VAPID)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your_vapid_public_key"
VAPID_PRIVATE_KEY="your_vapid_private_key"
VAPID_EMAIL="your_contact_email@vibelux.ai"

# Twilio SMS
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="your_twilio_phone_number"
TWILIO_MESSAGING_SERVICE_SID="your_messaging_service_sid"
TWILIO_VERIFY_SERVICE_SID="your_verify_service_sid"

# Autodesk Forge
NEXT_PUBLIC_FORGE_CLIENT_ID="your_forge_client_id"
FORGE_CLIENT_SECRET="your_forge_client_secret"
NEXT_PUBLIC_FORGE_BUCKET="your_forge_bucket"

# Spotify Integration
NEXT_PUBLIC_SPOTIFY_CLIENT_ID="your_spotify_client_id"
SPOTIFY_CLIENT_SECRET="your_spotify_client_secret"

# Scheduled Actions (for background processing)
SCHEDULED_ACTIONS_TOKEN="your-secure-random-token-here"

# Node Environment
NODE_ENV="production"

# Next.js
NEXT_PUBLIC_API_URL="https://api.vibelux.ai"
NEXT_PUBLIC_SITE_URL="https://www.vibelux.ai"