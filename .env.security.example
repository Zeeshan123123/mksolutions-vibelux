# Security Configuration
# Copy this to .env.local and update with your values

# Owner emails (comma-separated) - Can access dev tools in production
OWNER_EMAILS=blake@vibelux.ai

# Admin emails (comma-separated) - Can access admin routes
# If not set, defaults to OWNER_EMAILS
ADMIN_EMAILS=blake@vibelux.ai,admin@vibelux.ai

# CSRF Protection Secret (generate with: openssl rand -base64 32)
CSRF_SECRET=your-csrf-secret-here

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# API Security
API_RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
API_RATE_LIMIT_MAX_REQUESTS=100

# Trusted Domains for CSP
CSP_TRUSTED_DOMAINS=vibelux.ai,*.vibelux.ai

# Enable enhanced security features
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_CSP_HEADERS=true

# Monitoring and Alerts
SECURITY_ALERT_EMAIL=security@vibelux.ai
LOG_SECURITY_EVENTS=true